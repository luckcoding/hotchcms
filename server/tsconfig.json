{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es6"],
		"sourceMap": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
    "src/*"
	]
}